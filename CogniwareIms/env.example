# OPEA IMS - Environment Configuration
# IMPORTANT: Copy to .env and update with your values

# Security - CHANGE THESE!
JWT_SECRET_KEY=CHANGE_THIS_openssl_rand_hex_32
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Application
ENVIRONMENT=production
LOG_LEVEL=INFO

# OPEA Services
OPEA_EMBEDDING_URL=http://embedding-service:6000
OPEA_LLM_URL=http://llm-service:9000
OPEA_RETRIEVAL_URL=http://retrieval-service:7000

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/opea_ims
REDIS_URL=redis://redis:6379

# Models
EMBEDDING_MODEL_ID=BAAI/bge-base-en-v1.5
LLM_MODEL_ID=Intel/neural-chat-7b-v3-3

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional
HF_TOKEN=your_token_here
